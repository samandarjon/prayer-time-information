<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Test_db" transaction-type="RESOURCE_LOCAL">
              <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <mapping-file>META-INF/JpaMapping.xml</mapping-file>
        <class>uz.pdp.model.Users</class>
        <class>uz.pdp.model.Month</class>
        <class>uz.pdp.model.Times</class>
        <class>uz.pdp.model.Country</class>
        <class>uz.pdp.model.Profile</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/Test_db"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="clientBot"/>
            <property name="eclipselink.jdbc.password" value="123"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>

    </persistence-unit>
</persistence>
